@using ShenDeng.Framework.Tools

@{
    ViewBag.Title = "登录";
    Layout = "~/Views/Shared/Account_Layout.cshtml";
}

<h3>神灯的小屋</h3>
@Request[Keys.ErrorMessage]
@ViewData[Keys.ErrorMessage]

@using (Html.BeginForm("Login", "Account", FormMethod.Post))
{
    <div class="input_outer">
        <span class="u_user"></span>
        @Html.TextBox(Keys.UserName, "", new { @class = "text", @style = "color: #000000 !important", placeholder = "请输入账户" })
    </div>
    <div class="input_outer">
        <span class="us_uer"></span>
        @Html.Password(Keys.PassWord, "", new { @class = "text", @style = "color: #000000 !important", placeholder = "请输入密码" })
    </div>
    <div class="input_outer" style="width: 160px">
        @Html.TextBox(Keys.VefCode, "", new { @class = "text_vef", @style = "color:#000000", placeholder = "输入验证码" })
        <div style="margin-left: 160px; margin-top: -40px">
            <img src="/Account/GetImg" alt="刷新更换验证码" />
        </div>
    </div>
    
    <li> 还没有账户? 点击 @Html.ActionLink("注册", "Regist")</li>
    <button class="act-but submit" type="submit" style="width: 330px; color: #FFFFFF">登录</button>
}



